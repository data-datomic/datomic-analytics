R2PM_BEGIN

R2PM_GIT "https://github.com/radareorg/radare2-extras"
R2PM_DESC "[r2-bin] r2elisa - conversational r2 shell"

B="${R2PM_PREFIX}/bin/r2elisa"

R2PM_INSTALL() {
	cd r2elisa
	npm i
	echo "#!/bin/sh" > $B
	echo "node $PWD/index.js" '$*' >> $B
	chmod +x $B
}

R2PM_UNINSTALL() {
	rm -f "${B}"
}

R2PM_END
