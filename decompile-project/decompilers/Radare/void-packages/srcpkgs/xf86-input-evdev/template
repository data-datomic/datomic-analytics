xf86-input-evdev-devel_package() {
	lib32disabled=yes
	depends="xorg-server-devel ${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
	}
}
